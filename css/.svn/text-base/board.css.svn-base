.grid {

}
.grid .grid_row {
    overflow: hidden;
}
.grid .grid_row .grid_cell {
    border-radius: 2px;
    float: left;
    width: 30px;
    height: 30px;
    margin: 3px;
    background: #eeeeee;
}
.title {
    font-size: 1.4em;
    padding-left: 2px;
    color: #eee;
}
.boards_container {
    overflow: hidden;
}
.board {
    margin-left: 30px;
    margin-top: 30px;
    background: rgba(255, 255, 255, 0.2);

    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5);
    padding: 10px;
}
.my_board {
    overflow: hidden;
    position: relative;
    float: left;
}
.my_board .grid .grid_row .grid_cell {
    background: rgba(223, 255, 224, 0.5);
}
.my_board .grid .grid_row .grid_cell:hover {
    background: rgba(223, 255, 224, 0.9);
    cursor: pointer;
}
.my_board .grid .grid_row .grid_cell.filled {
    background: #84D189;
}
.my_board .grid .grid_row .grid_cell.oponent_attack {
    border: 2px solid indianred;
}
.my_board .grid .grid_row .grid_cell.cell_damage {
    background: indianred;
}

.boat_input {
    position: relative;
    float: left;
}


.opponent_board {
    position: relative;
    float: left;
}
.opponent_board .grid .grid_row .grid_cell {
    background: rgba(255, 203, 203, 0.5);
}
.opponent_board .grid .grid_row .grid_cell:hover {
    background: rgba(255, 203, 203, 0.9);
    cursor: pointer;
}
.opponent_board .grid .grid_row .grid_cell.attacked {
    background: #DD7F7F;
}
.opponent_board .grid .grid_row .grid_cell.hit {
    background: greenyellow;
}


.available_ships {
    float: left;
    margin-left: 30px;
    margin-top: 30px;
    background: rgba(255, 255, 255, 0.2);

    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
    padding: 10px;
}
.available_ships .ship_container {
    overflow: hidden;
    margin: 5px;
    display: inline-block;
    border: 1px solid #E4E4E4;
    border-radius: 3px;
}
.available_ships .ship_container.active {
    border: 1px solid rgba(223, 255, 224, 0.5);
}
.available_ships .ship_container .ship_cell {
    width: 20px;
    height: 20px;
    margin: 3px;
    border-radius: 2px;
}
.available_ships .ship_container.horisontal .ship_cell {
    float: left;
}
.available_ships .ship_container .ship_cell.exists {
    background: #ffffff;
}
.available_ships .ship_container.active .ship_cell.exists {
    background: rgba(223, 255, 224, 0.5);
}

.chat_container {
    position: fixed;
    padding: 5px;
    height: 300px;
    width: 300px;
    margin-left: 0;
    right: 30px;
    bottom: 30px;
    background: rgba(32, 32, 32, 0.66);
}
.chat_container .messages {
    height: 215px;
    overflow-y: auto;
}
.chat_container .message {
    position: relative;
}
.chat_container .message .name {
    padding-right: 5px;
    color: #CAA137;
}

.chat_container .chat_input {
    position: absolute;
    bottom: 5px; left: 5px;
    width: 97%;
    padding: 5px;

    background: rgba(255, 255, 255, 0.2);
    border: 1px solid #C7C7C7;
    border-radius: 5px;
}
.chat_container .chat_input:focus {
    outline: none;
}

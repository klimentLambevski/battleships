@font-face {
    font-family: 'Iceland';
    font-style: normal;
    font-weight: 400;
    src: local('Iceland'), local('Iceland-Regular'), url(../assets/fonts/Iceland.woff) format('woff');
}

*, *:after, *:before {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

html {
    min-height: 100%;
}
body {
    min-height: 100%;
    background-image: url(../assets/images/background1.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    font-family: "Iceland";
}
.game_menu {
    text-align: center;
}

.m_container {
    float: left;
    margin-left: 100px;
    margin-top: 100px;
    background: rgba(255, 255, 255, 0.2);

    font-size: 1.2em;
    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
    padding: 20px;
}

.game_menu .login_container {
    float: left;
    margin-left: 100px;
    margin-top: 100px;
    background: rgba(255, 255, 255, 0.2);

    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
    padding: 50px;
}
.game_menu .login_container .welcome {
    font-size: 3em;
}
.game_menu .login_container .title {
    font-size: 5em;
}
.game_menu .login_container .player_name {
    width: 300px;
    color: #524823;
    border: 1px solid;
    box-shadow: 1px 1px rgba( 0, 0, 0, 0.1 );
    border-radius: 3px;
    padding: 10px;
    background: rgba(255, 255, 255, 0.6);
    text-align: center;

    font-size: 2em;
    margin: 20px auto;
}
.game_menu .login_container .player_name:focus {
    background: rgba(255, 255, 255, 0.7);
    outline: none;
}
.game_menu .login_container .button {
    width: 300px;
    color: #C7C7C7;
    border: 1px solid;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    padding: 10px;

    font-size: 2em;
    margin: 10px auto;
    cursor: pointer;
}
.game_menu .login_container .button:hover {
    background: rgba(255, 255, 255, 0.2);
}

.game_menu .player_list_container {
    float: left;
    margin-left: 100px;
    margin-top: 100px;
    background: rgba(255, 255, 255, 0.2);

    font-size: 1.2em;
    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
    padding: 20px;
}
.game_menu .player_list_container .welcome {
    font-size: 1.4em;
}
.game_menu .player_list_container .player_list {
    padding: 10px 0;
    max-width: 500px;
}
.game_menu .player_list_container .player_list .item {
    float: left;
    padding: 5px 10px;
    margin-right: 5px;
    margin-bottom: 5px;
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid #ffffff;
    border-radius: 3px;
    cursor: pointer;
}
.game_menu .timer_container {
    float: left;
    margin-left: 100px;
    margin-top: 100px;
    background: rgba(255, 255, 255, 0.2);

    font-size: 1.2em;
    color: #E4E4DB;
    border: 1px solid #C7C7C7;
    border-radius: 5px;
    box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
    padding: 20px;
}
.game_menu .timer_container .title {
    font-size: 2em;
}
.game_menu .timer_container .time_remaining {
    font-size: 3.5em;
}

.game_menu .request_container {
    float: right;
    margin-left: 0;
    margin-right: 100px;
    margin-top: 100px;
    background: rgba(32, 32, 32, 0.66);
}
.game_menu .request_container .accept_btn {
    color: #C7C7C7;
    border: 1px solid;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    padding: 10px;
    font-size: 1.5em;
    margin: 10px auto;
    cursor: pointer;
}
.game_active .gamemessage{
	background: rgba(255, 255, 255, 0.2);
	color: #E4E4DB;
	border: 1px solid #C7C7C7;
	border-radius: 5px;
	box-shadow: 3px 3px 3px rgba( 0, 0, 0, 0.5 );
	float: right;
	padding: 10px;
	font-size: 2em;
	margin: 30px;
}
